<?xml version="1.0" encoding="UTF-8"?>
<server>

    <!-- Enable features -->
    <featureManager>
        <feature>zosTransaction-1.0</feature>
        <feature>jdbc-4.0</feature>
    </featureManager>
    
    <dataSource id="db2" jndiName="${db2.jndi.name}" type="javax.sql.ConnectionPoolDataSource">
        <jdbcDriver libraryRef="DB2JCC4Lib"/>
        <properties.db2.jcc driverType="4" databaseName="${db2.location}" user="${db2.userid}" password="${db2.password}" serverName="${db2.hostname}" portNumber="${db2.port}" />
    </dataSource>

    <library id="DB2JCC4Lib">
        <fileset dir="${db2.jdbc.driver}/classes" includes="db2jcc4.jar db2jcc_license_cisuz.jar"/>
        <fileset dir="${db2.jdbc.driver}/lib" includes="*"/>
    </library>
    
</server>